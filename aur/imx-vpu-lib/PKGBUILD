# Maintainer: Daniel Ranger <dranger003@gmail.com>
pkgname=imx-vpu-lib
pkgver=3.0.35_4.1.0
pkgrel=1
pkgdesc="i.MX6 Linux BSP IMX Lib Files (L3.0.35_4.1.0_SOURCE_BSP)"
arch=(armv7h)
url="https://community.freescale.com/docs/DOC-95560"
license=('FREESCALE SOFTWARE LICENSE AGREEMENT')
source=(imx-vpu-lib-3.0.35-4.1.0.tar.gz)
md5sums=('890a37cc7b63e1d47344292f2723305c')

build() {
	cd ${srcdir}/imx-vpu-lib-3.0.35-4.1.0/
	PLATFORM=IMX6Q make -j4
}

package() {
	cd ${srcdir}/imx-vpu-lib-3.0.35-4.1.0/
	DEST_DIR=${pkgdir} make install
	install -DTm755 ${startdir}/LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
