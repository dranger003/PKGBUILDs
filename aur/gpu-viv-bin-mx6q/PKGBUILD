pkgname=gpu-viv-bin-mx6q
pkgver=3.0.35_4.1.0
pkgrel=1
pkgdesc="i.MX6 Linux BSP Vivante GPU Files (L3.0.35_4.1.0_SOURCE_BSP)"
arch=(armv7h)
url="https://community.freescale.com/docs/DOC-95560"
conflicts=('mesa' 'mesa-libgl' 'mesa-demos')
license=('FREESCALE SOFTWARE LICENSE AGREEMENT')
source=(gpu-viv-bin-mx6q-3.0.35-4.1.0.tar.gz)
