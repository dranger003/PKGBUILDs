# Maintainer: Daniel Ranger <dranger003@gmail.com>
pkgname=imx-lib
pkgver=3.0.35_4.1.0
pkgrel=1
pkgdesc="i.MX6 Linux BSP IMX Lib Files (L3.0.35_4.1.0_SOURCE_BSP)"
arch=(armv7h)
url="https://community.freescale.com/docs/DOC-95560"
license=('FREESCALE SOFTWARE LICENSE AGREEMENT')
source=(imx-lib-3.0.35-4.1.0.tar.gz)
md5sums=('077c9a7b0ce7b5a9caa7887951afe703')

prepare() {
	rm -fr ${srcdir}/imx-lib-3.0.35-4.1.0/rng
}

build() {
	cd ${srcdir}/imx-lib-3.0.35-4.1.0/
	PLATFORM=IMX6Q INCLUDE=-I/usr/src/linux-3.0.35-8-ARCH/include make -j4
}

package() {
	cd ${srcdir}/imx-lib-3.0.35-4.1.0/
	DEST_DIR=${pkgdir} PLATFORM=IMX6Q make install
	install -DTm755 ${startdir}/LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
